@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html>
   <style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        
        background-image:repeating-radial-gradient(salmon,black);
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-left:600px;
    }

    input[type=number] {
        width: 100%;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

      
        
    
</style>
<body>

    <h3>Add Items Here.</h3>

    <div >
        <form action="/Home/Add" method="get">
            <label for="Title">Title of Item</label>
            <input type="text"  name="title" placeholder="Your name..">

            <label for="Description">Description of Item</label>
            <input type="text"  name="description" placeholder="Write Description">

            <label for="price">Price of Item</label>
            <input type="number" name="price" min="0" max="1000000" placeholder="Enter Price">
            <br />

            <label for="Category">Category of Item</label>
            <input type="text" name="category" placeholder="Category ..">

            

            <input type="submit" value="Submit">
        </form>
    </div>

</body>
</html>
